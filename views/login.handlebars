<div class="login">
  <div class="login-card">
    <h2 class="page-title" id="title">Log In</h2>
    <form class="form login-form" id="login-form">
      <div class="form-group">
        <label for="user-input">Username</label>
        <input class="form-input" type="text" id="user-input"/>
      </div>
      <div class="form-group">
        <label for="password-input">Password</label>
        <input class="form-input" type="password" id="password-input"/>
      </div>
      <div class="form-group">
        <button class="btn" type="submit" id="formbutton">Log In!</button>
        <a href="#" id="link">Sign up instead</a>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>